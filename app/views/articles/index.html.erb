<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<%= form_tag articles_path, method: 'get' do %>
  <%= text_field_tag :q, params[:q] %>
  <%= submit_tag :search %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Published on</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td><%= article.published_on %></td>
      </tr>
    <% end %>
  </tbody>
</table>
